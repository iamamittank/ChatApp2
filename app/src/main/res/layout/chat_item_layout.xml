<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/signup_male"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/list_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_image"
        android:layout_toEndOf="@+id/list_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/list_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_image"
        android:layout_toEndOf="@+id/list_image"
        android:layout_below="@+id/list_username"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:text="Email ID"
        android:textSize="15dp"
        android:textColor="#808080"/>

    <ImageView
        android:id="@+id/list_online"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_toRightOf="@+id/list_username"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/online"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/name_hr"
        android:layout_below="@+id/list_image"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:background="#808080"/>

</RelativeLayout>